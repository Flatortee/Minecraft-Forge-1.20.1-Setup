<Window x:Class="MCjava.Windows.Connect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCjava.Windows"
        mc:Ignorable="d"
        Title="Entrer le chemin" Height="200" Width="350">
    <!-- Conteneur vertical principal -->
    <StackPanel Margin="10">
        <!-- Texte d'instruction pour l'utilisateur -->
        <TextBlock Text="Veuillez entrer le chemin :" Margin="0,0,0,5"/>
        <!-- Zone de saisie du chemin -->
        <TextBox x:Name="PathTextBox" Margin="0,0,0,10"/>
        <!-- Bouton pour ouvrir le sélecteur de dossier -->
        <Button Content="Parcourir..." Width="90" Margin="0,0,10,0" Click="BrowseButton_Click"/>
        <!-- Bouton pour valider le chemin et fermer la fenêtre -->
        <Button Content="OK" Width="60" HorizontalAlignment="Right" Click="OkButton_Click"/>
    </StackPanel>
</Window>
